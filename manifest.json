{
    "manifest_version": 3,
    "name": "Video Song Detector",
    "version": "1.0.1",
    "description": "Detect start and endpoints of songs in videos.",
    "permissions": [
      "activeTab",
      "webNavigation"
    ],
    "host_permissions": [
      "https://*.netflix.com/*",
      "https://*.primevideo.com/*", 
      "https://*.disneyplus.com/*",
      "https://*.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://*.netflix.com/*",
          "https://*.primevideo.com/*", 
          "https://*.disneyplus.com/*",
          "https://*.youtube.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }